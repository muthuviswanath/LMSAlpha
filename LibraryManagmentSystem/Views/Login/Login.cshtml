@{
    Layout = "_Layout";
}


<center><h3 style="color: #762b00; font-family:'Gill Sans' ">Sign in to Alpha Digital Library</h3></center>
<body class="main">
    <center class="hover">
        <form method="post" asp-controller="Login" asp-action="Login">
            <table style="background-color:#762b00;color:white; margin-top:50px;border-radius:15px;" cellpadding="12">
               <tr>
                   <td colspan="2">
                        <center>
                           <img width="150px" src="~/Images/imgs/generaluser.png"/>
                        </center>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <center>Member Login</center><br/>
                    </td>
                </tr>
                <tr>
                    <td >Username:</td>
                    <td><input type="text" name="uname"/></td>
                </tr>
                <tr>
                    <td>Password: </td>
                    <td><input type="password" name="psd" /></td>
                </tr>
                <tr>
                    <td colspan="2"><center><input type="submit" class="RequestToLent" value="Log In" style="border-radius:15px; width:50%;" /></center></td>
                </tr>
                <tr>
                    <td colspan="2"><center>@ViewBag.error</center></td>
                </tr>
                
            </table>
        </form>
    </center>
    </body>
    <br/>    <br/>  
