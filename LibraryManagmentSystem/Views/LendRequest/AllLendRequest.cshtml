
@model IEnumerable<LibraryManagmentSystem.Models.LendRequest>
 <div class="container">
  <div class="row justify-content-md-center"> 
<div class="col-md-12">
    <div class="card">
        <div class="card-body">
                  <div class="row">
                     <div class="col">
                        <center>
                           <h4>Admin's Requested Book List</h4>
                        </center>
                     </div>
                  </div>
                  <!--Need to check this part why it is not working-->
                  @if(ViewBag.MessageStatus == "Request Approved !!!"){
                      <div class="alert alert-success alert-dismissible fade show" role="alert">
                          <strong>@ViewBag.MessageStatus</strong> Hi
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                    }
                    else if(ViewBag.MessageStatus == "Declined")
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                          <strong>@ViewBag.MessageStatus</strong> 
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                    }

                        <div class="row">
                     <div class="col">
                        <hr>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col">
                        <table class="table table-striped table-bordered" >
                            <thead>
                                <tr>
                                <td>Lend Id </td>
                                <td>User Name </td>
                                <td>Book Id</td>
                                <td>Book Name</td>
                                <td>Status</td>
                                <td colspan="2"></td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model)
                                {
                                    <tr>
                                        <td>@request.LendId</td>
                                        <td>@request.UserId</td>
                                        <td>@request.BookId</td>
                                        <td>@request.BooksInfo.BookTitle</td>
                                        <td>@request.LendStatus</td>
                                        <td>
                                            <form asp-controller="LendRequest" asp-action="Approval" asp-route-lendId="@request.LendId">
                                            <button>Approve</button>
                                            </form>
                                        </td>
                                        <td>
                                            <form asp-controller="LendRequest" asp-action="Decline" asp-route-lendId="@request.LendId">
                                            <button>Decline</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                        </tbody>
                        </table>
                     </div>
                  </div>
        </div>
    </div>
</div>
</div>
</div>